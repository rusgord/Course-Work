<link rel="stylesheet" href="/css/create-service.css">
<script src="https://cdnjs.cloudflare.com/ajax/libs/inputmask/5.0.6/inputmask.min.js"></script>
@using ProjectDelivery.Enums
@{
    ViewData["Title"] = "Відправити";
}
@model ProjectDelivery.Models.Package
<div class="container">
    <div class="create">
        <h2>Накладна</h2>
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Description" class="control-label">Опис посилки</label>
                <input asp-for="Description" class="form-control" placeholder="Подарунок другові" />
            </div>
            
            <div class="form-group">
                <label asp-for="Weight" class="control-label">Вага, кг</label>
                <input asp-for="Weight" class="form-control" placeholder="0" />
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label">Вартість посилки, грн</label>
                <input asp-for="Price" class="form-control" placeholder="0"/>
            </div>
            <div class="form-group">
                <label asp-for="recipientName">Ім`я отримувача</label>
                <input asp-for="recipientName" class="form-control" placeholder="Петро"/>
            </div>
            <div class="form-group">
                <label asp-for="Phone">Телефон</label>
                <input asp-for="Phone" class="form-control phone-input" maxlength="14" data-mask="(999)-999-99-99" placeholder="(XXX)-XXX-XX-XX" />
            </div>
            <div class="form-group mb-2">
                <label asp-for="City">Місто</label>
                <select asp-for="City" class="form-control">
                    <option disabled selected>Виберіть місто</option>
                    @foreach (EnumCities city in Enum.GetValues(typeof(EnumCities)))
                    {
                        <option value="@city">@city</option>
                    }
                </select>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="TypePayment" /> Швидка доставка
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Створити посилку" class="btn btn-primary" />
            </div>
        </form>
        <div>
            <a asp-controller="Home" asp-action="Index">Повернутися на головну</a>
        </div>
    </div>
</div>