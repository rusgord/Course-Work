<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ProjectDelivery.styles.css" asp-append-version="true" />
    <style> 
        header, body, h1, h2, h3, h4, h5, h6, p, a, ul, ol, nav {
            font-family: 'Montserrat', sans-serif !important;
        }
        header {
            padding-top: 20px;
        } 

        .navbar-nav{
            padding-bottom: 20px;
        }
        .navbar-brand{
            padding-top: 0px;
            padding-bottom: 20px;
        }

    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow">
            <div class="container-fluid">                
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Service" asp-action="Create">Відправити</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Service" asp-action="Tracking">Трекінг</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Service" asp-action="Index">Послуги</a>
                        </li>
                    </ul>
                    <a class="navbar-brand" style="position: absolute; left: 50%; transform: translateX(-50%);" asp-area="" asp-controller="Home" asp-action="Index">
                        <img src="~/lib/images/LogoTransperent.png" width="80px" alt="ProjectDelivery">
                    </a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>

    <footer class="border-top footer text-muted">
        <div class="text-center" style="display: block;">
            &copy; 2024 - ProjectDelivery
        </div>
    </footer>
    <script src="~/js/jquery-3.7.1.min.js"></script>
    <script src="~/js/jquery.mask.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
