@using Microsoft.AspNetCore.Identity
@inject UserManager<AccModel> UserManager
<link rel="stylesheet" href="/css/addarticle-admin.css">
@{
    ViewData["Title"] = "Додати статтю";
}
@model ArticleModel
@{
    var curruser = await UserManager.GetUserAsync(User);
    if (curruser.Roles == ProjectDelivery.Enums.EnumRoles.Admin)
    {
        <div class="container">
            <div class="col">
                <div class="box">
                    <h2>@ViewData["Title"]</h2>
                    <form asp-controller="Admin" asp-action="AddArticle" method="post" class="form-horizontal" role="form">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Title" class="control-label"></label>
                            <input asp-for="Title" class="form-control" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-2">
                            <label asp-for="Description" class="control-label"></label>
                            <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">Додати</button>
                            <a class="btn btn-secondary" asp-controller="Admin" asp-action="AdminPanel">Повернутися</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    }
}
